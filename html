<script>
(function(){
  const panel = document.getElementById('panel');
  const toggle = document.getElementById('togglePanel');

  // Enable inline text editing toggle
  let editMode = false;
  function setEditMode(state){
    editMode = state;
    document.querySelectorAll('.editable').forEach(el=>{
      const isImage = el.dataset.edit === 'image';
      el.setAttribute('contenteditable', isImage ? 'false' : (editMode ? 'true' : 'false'));
    });
    panel.classList.toggle('open', editMode);
    toggle.textContent = editMode ? 'Close editor' : 'Edit mode';
  }
  toggle.addEventListener('click', ()=> setEditMode(!editMode));

  // Click-to-edit images
  document.addEventListener('click', (e)=>{
    const el = e.target;
    if (el.classList.contains('editable') && el.dataset.edit === 'image' && editMode){
      const url = prompt('Enter new image URL:', el.src);
      if (url) el.src = url;
    }
  });

  // Theme controls
  const setVar = (name,val)=>document.documentElement.style.setProperty(name,val);
  accentPicker.oninput = ()=>setVar('--accent', accentPicker.value);
  inkPicker.oninput = ()=>setVar('--ink', inkPicker.value);
  panelPicker.oninput = ()=>setVar('--panel', panelPicker.value);
  bgPicker.oninput = ()=>setVar('--bg', bgPicker.value);
  heroLayout.onchange = ()=>setVar('--hero-cols', heroLayout.value);
  gridCols.onchange = ()=>setVar('--grid-cols', gridCols.value);
  bgImageUrl.onchange = ()=>{
    const v = bgImageUrl.value.trim();
    setVar('--bg-image', v ? `url("${v}")` : 'none');
  };

  // Add / remove gallery cards
  const grid = document.getElementById('galleryGrid');
  let cardCount = grid.querySelectorAll('.card').length;
  addCard.addEventListener('click', ()=>{
    cardCount++;
    const id = `c${Date.now()}`;
    const html = `
      <article class="card" data-card-id="${id}">
        <img class="thumb editable" contenteditable="false" data-edit="image" src="assets/gallery/01.jpg" alt="New tattoo" />
        <div class="meta">
          <h3 class="editable" contenteditable="true" id="${id}Title">New piece</h3>
          <p class="editable" contenteditable="true" id="${id}Desc">Describe the work.</p>
        </div>
      </article>
    `;
    grid.insertAdjacentHTML('beforeend', html);
  });
  removeLast.addEventListener('click', ()=>{
    const cards = grid.querySelectorAll('.card');
    if (cards.length) cards[cards.length-1].remove();
  });

  // Save / reset / export / import
  function serialize(){
    const data = { vars:{}, texts:{}, images:[], cards:[] };
    // CSS variables
    const styles = getComputedStyle(document.documentElement);
    ['--bg','--panel','--ink','--accent','--bg-image','--hero-cols','--grid-cols']
      .forEach(k=>data.vars[k]=styles.getPropertyValue(k).trim());
    // Text blocks
    document.querySelectorAll('.editable').forEach(el=>{
      if (el.dataset.edit === 'image') return;
      if (el.id) data.texts[el.id] = el.innerHTML;
    });
    // Images with stable IDs or paths
    document.querySelectorAll('.editable[data-edit="image"]').forEach(img=>{
      const id = img.id || img.closest('.card')?.dataset.cardId || img.src;
      data.images.push({ id, src: img.src, alt: img.alt });
    });
    // Cards
    grid.querySelectorAll('.card').forEach(card=>{
      const cid = card.dataset.cardId || '';
      const title = card.querySelector('.meta h3')?.innerHTML || '';
      const desc = card.querySelector('.meta p')?.innerHTML || '';
      const src = card.querySelector('img')?.src || '';
      data.cards.push({ id: cid, title, desc, src });
    });
    return data;
  }
  function apply(data){
    if (data.vars){
      Object.entries(data.vars).forEach(([k,v])=> v && setVar(k,v));
      bgImageUrl.value = (data.vars['--bg-image']||'').replace(/^url\\("?|"?\\)$/g,'');
      heroLayout.value = data.vars['--hero-cols'] || '1.2fr 1fr';
      gridCols.value = data.vars['--grid-cols'] || 'repeat(auto-fill,minmax(220px,1fr))';
      accentPicker.value = data.vars['--accent'] || '#7a1f2b';
      inkPicker.value = data.vars['--ink'] || '#e8e8ea';
      panelPicker.value = data.vars['--panel'] || '#141418';
      bgPicker.value = data.vars['--bg'] || '#0b0b0d';
    }
    if (data.texts){
      Object.entries(data.texts).forEach(([id,html])=>{
        const el = document.getElementById(id);
        if (el) el.innerHTML = html;
      });
    }
    if (Array.isArray(data.cards)){
      grid.innerHTML = '';
      data.cards.forEach(c=>{
        const id = c.id || `c${Date.now()}${Math.random()}`;
        grid.insertAdjacentHTML('beforeend', `
          <article class="card" data-card-id="${id}">
            <img class="thumb editable" contenteditable="false" data-edit="image" src="${c.src||'assets/gallery/01.jpg'}" alt="${c.title||'Tattoo'}" />
            <div class="meta">
              <h3 class="editable" contenteditable="true" id="${id}Title">${c.title||'Piece'}</h3>
              <p class="editable" contenteditable="true" id="${id}Desc">${c.desc||'Description'}</p>
            </div>
          </article>
        `);
      });
    }
    if (Array.isArray(data.images)){
      data.images.forEach(({id,src})=>{
        const img = document.getElementById(id) || grid.querySelector(`[data-card-id="${id}"] img`);
        if (img && src) img.src = src;
      });
    }
  }
  function saveAll(){
    const data = serialize();
    localStorage.setItem('nocturne-edit', JSON.stringify(data));
    alert('Saved to localStorage.');
  }
  function resetAll(){
    localStorage.removeItem('nocturne-edit');
    location.reload();
  }
  function exportData(){<!DOCTYPE html>
