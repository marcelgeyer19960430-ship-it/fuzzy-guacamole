  <script>
    // Load saved edits
    document.querySelectorAll('.editable').forEach(el => {
      const saved = localStorage.getItem(el.id);
      if (saved) el.innerHTML = saved;
    });
    ['img1','img2','img3'].forEach(id=>{
      const saved = localStorage.getItem(id);
      if(saved) document.getElementById(id).src = saved;
    });

    function saveEdits() {
      document.querySelectorAll('.editable').forEach(el => {
        localStorage.setItem(el.id, el.innerHTML);
      });
      ['img1','img2','img3'].forEach(id=>{
        localStorage.setItem(id, document.getElementById(id).src);
      });
      alert('Edits saved locally!');
    }

    function resetEdits() {
      document.querySelectorAll('.editable').forEach(el => {
        localStorage.removeItem(el.id);
      });
      ['img1','img2','img3'].forEach(id=>{
        localStorage.removeItem(id);
      });
      location.reload();
    }

    function editImage(id) {
      const newUrl = prompt("Enter new image URL:", document.getElementById(id).src);
      if(newUrl) document.getElementById(id).src = newUrl;
    }
  </script>
