    .editable { border:1px dashed rgba(255,255,255,0.3); padding:6px; border-radius:6px; }
    .toolbar { margin:10px 0; }
    button { background:#121216; color:#e8e8ea; border:1px solid rgba(255,255,255,0.2); padding:6px 12px; border-radius:6px; cursor:pointer; }
    button:hover { background:#1a1a20; }
    .gallery { display:grid; grid-template-columns:repeat(auto-fill,minmax(200px,1fr)); gap:16px; }
    .card { background:#141418; padding:10px; border-radius:8px; }
    .card img { width:100%; border-radius:6px; }
